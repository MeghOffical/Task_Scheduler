{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "This config was generated using 'stryker init'. Please see the guide for more information: https://stryker-mutator.io/docs/stryker/guides/react",
  "packageManager": "npm",
  "reporters": [
    "html",
    "clear-text",
    "progress",
    "json"
  ],
  "testRunner": "jest",
  "jest": {
    "projectType": "custom",
    "configFile": "jest.config.js",
    "enableFindRelatedTests": true
  },
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "lib/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/*.test.tsx",
    "!src/**/*.spec.ts",
    "!src/**/*.spec.tsx",
    "!src/types/**",
    "!src/app/globals.css"
  ],
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json",
  "tempDirName": "testing/mutation/stryker-tmp",
  "htmlReporter": {
    "fileName": "testing/mutation/reports/mutation-report.html"
  },
  "jsonReporter": {
    "fileName": "testing/mutation/reports/mutation-report.json"
  }
}
